<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListingDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".listing_details.ListingDetailsActivity">

        <ImageView
            android:id="@+id/listing_detail_current_iv"
            android:contentDescription="@string/content_description_listing_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="16:9"
            tools:src="@tools:sample/backgrounds/scenic" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_images"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listing_detail_current_iv"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/activity_listing_details_image"
            tools:itemCount="5" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@android:color/primary_text_light"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycler_images"
            android:textIsSelectable="true"
            tools:text="@string/example_title_text" />

        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textIsSelectable="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_title"
            tools:text="@string/example_description_text" />

        <TextView
            android:id="@+id/text_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:textIsSelectable="false"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_description"
            tools:text="Example Name" />

        <TextView
            android:id="@+id/text_member_suburb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:textIsSelectable="false"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/text_member_name"
            app:layout_constraintTop_toBottomOf="@+id/text_member_name"
            tools:text="Location" />

        <ImageView
            android:id="@+id/image_down_votes"
            android:contentDescription="@string/negative_feedback_image_description"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/text_member_suburb"
            app:layout_constraintEnd_toStartOf="@+id/text_down_votes"
            app:layout_constraintTop_toTopOf="@+id/text_member_suburb"
            app:layout_constraintVertical_bias="0.515"
            app:srcCompat="@drawable/ic_negative_feedback"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/image_up_votes"
            android:contentDescription="@string/positive_feedback_image_description"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/image_down_votes"
            app:layout_constraintEnd_toStartOf="@+id/text_up_votes"
            app:layout_constraintTop_toTopOf="@+id/image_down_votes"
            app:srcCompat="@drawable/ic_positive_feedback"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/text_down_votes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:textIsSelectable="false"
            app:layout_constraintBottom_toBottomOf="@+id/image_down_votes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image_down_votes"
            tools:text="10" />

        <TextView
            android:id="@+id/text_up_votes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:textIsSelectable="false"
            app:layout_constraintBottom_toBottomOf="@+id/image_down_votes"
            app:layout_constraintEnd_toStartOf="@+id/image_down_votes"
            app:layout_constraintTop_toTopOf="@+id/image_down_votes"
            tools:text="250" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>